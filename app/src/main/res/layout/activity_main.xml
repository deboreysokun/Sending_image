<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
    android:layout_width="332dp"
    android:layout_height="337dp"
    android:id="@+id/photo"
    android:src="@drawable/dog"
    android:scaleType="centerCrop"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView"
    app:layout_constraintHorizontal_bias="0.493" android:layout_marginTop="12dp"/>
    <Button
    android:text="Select image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/select"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/upload"
    android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.822" android:onClick="submit"
    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/photo"
    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintVertical_bias="0.252"/>
    <Button
    android:text="upload"
    android:layout_width="107dp"
    android:layout_height="48dp"
    android:id="@+id/upload"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginEnd="80dp" android:onClick="submit"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/photo" android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.252"/>
    <TextView
    android:text="Select the photo from gallery"
    android:layout_width="291dp"
    android:layout_height="52dp"
    android:id="@+id/textView"
    android:textSize="20dp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="8dp"
    android:layout_marginTop="68dp" app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintHorizontal_bias="0.605"/>

        </androidx.constraintlayout.widget.ConstraintLayout>